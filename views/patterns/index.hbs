    <div>
      <img src="{{this.coverImage}}" class="img-fluid">
      <h2><a href="">{{this.name}}</a></h2>
      </div>
    <div class="links">
      <!-- for actions later -->
    </div>
  </li>
  {{/each}}
</ul>